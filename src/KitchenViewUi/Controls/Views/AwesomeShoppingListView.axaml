<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="kitchenview.Controls.Views.AwesomeShoppingListView">
	<Border Classes="ShoppingList">
		<StackPanel>
			<ItemsControl Items="{Binding ShoppingList}">
				<ItemsControl.Styles>
					<Style Selector="TextBlock[IsEnabled=true]">
						<Style.Animations>
							<Animation Duration="0:0:15" Delay="0:0:0" IterationCount="INFINITE">
								<KeyFrame Cue="0%">
									<Setter Property="Margin" Value="0 0 0 0"/>
								</KeyFrame>
								<KeyFrame Cue="100%">
									<Setter Property="Margin" Value="0 0 -500 0"/>
								</KeyFrame>
							</Animation>
						</Style.Animations>
					</Style>
				</ItemsControl.Styles>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</Border>
</UserControl>

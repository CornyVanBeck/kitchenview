<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="kitchenview.Controls.Views.AwesomeGalleryView"
             xmlns:tile="using:kitchenview.Controls.Views">          
  <Carousel>
    <Carousel.PageTransition>
      <PageSlide Duration="0:00:00.500" Orientation="Horizontal" />
    </Carousel.PageTransition>
    <ItemsControl Items="{Binding Tiles}">
      <ItemsControl.ItemTemplate>
          <DataTemplate>
            <tile:AwesomeGalleryTileView/>
          </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Carousel>
</UserControl>
